<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.danieldpereira.usersystem.controller.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="Sistema de Usuários">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="Faça seu login para continuar" textFill="#666666" />

    <VBox spacing="5.0" alignment="CENTER_LEFT" maxWidth="300">
        <Label text="Usuário:" />
        <TextField fx:id="txtUsuario" promptText="Digite seu usuário" />
    </VBox>

    <VBox spacing="5.0" alignment="CENTER_LEFT" maxWidth="300">
        <Label text="Senha:" />
        <PasswordField fx:id="txtSenha" promptText="Digite sua senha" />
    </VBox>

    <Button text="ENTRAR" onAction="#handleLogin" defaultButton="true" maxWidth="300" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

</VBox>