<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Region?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.danieldpereira.usersystem.controller.DashboardController">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>

            <Label fx:id="lblBemVindo" text="Bem-vindo, Usuário">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>

            <Button onAction="#handleLogout" text="Sair" style="-fx-background-color: #dc3545; -fx-text-fill: white;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label text="Gerenciamento de Usuários">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button text="+ Novo Usuário" onAction="#handleNovoUsuario"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-cursor: hand;" />

                <Button text="Editar" onAction="#handleEditarUsuario" fx:id="btnEditar" disable="true"
                        style="-fx-cursor: hand;" />

                <Button text="Excluir" onAction="#handleExcluirUsuario" fx:id="btnExcluir" disable="true"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-cursor: hand;" />
            </HBox>

            <TableView fx:id="tabelaUsuarios" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
                    <TableColumn fx:id="colUsuario" text="Usuário" prefWidth="150.0" />
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200.0" />
                    <TableColumn fx:id="colNivel" text="Nível" prefWidth="100.0" />
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>